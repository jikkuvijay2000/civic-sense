# Backend .env for production — copy these into Render's Environment Variables UI
# DO NOT commit this file to git

MONGO_URL=mongodb+srv://<user>:<password>@cluster.mongodb.net/civic-connect?retryWrites=true&w=majority
ACCESS_TOKEN_SECRET=your_super_secret_access_token_here
REFRESH_TOKEN_SECRET=your_super_secret_refresh_token_here

# Set this AFTER you deploy the frontend — it's your Render static site URL
CLIENT_URL=https://civic-connect.onrender.com

# Cloudinary (for image/video uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email (Nodemailer)
EMAIL_USER=your@gmail.com
EMAIL_PASS=your_gmail_app_password

# Gemini AI
GEMINI_API_KEY=your_gemini_api_key
